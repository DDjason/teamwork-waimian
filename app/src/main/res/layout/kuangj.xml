<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#4FCC00"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kuangj_return"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/deal_return" />

        <TextView
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/kuangj"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="10"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical">
             <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:layout_margin="3dp">
        <TextView
            android:textSize="15sp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/kuangj_version"
            android:layout_height="match_parent"
            android:background="@drawable/view_border3"
            android:gravity="center"/>
        <TextView
            android:textSize="15sp"
          android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/kuangj_number"
            android:layout_height="match_parent"
            android:background="@drawable/view_border3"
            android:gravity="center"/>
        <TextView
            android:textSize="15sp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/kuangj_summary"
            android:layout_height="match_parent"
            android:background="@drawable/view_border3"
            android:gravity="center"/>
        <TextView
            android:textSize="15sp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/kuangj_download"
            android:layout_height="match_parent"
            android:background="@drawable/view_border3"
            android:gravity="center"/>
        <TextView
            android:textSize="15sp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/kuangj_status"
            android:layout_height="match_parent"
            android:background="@drawable/view_border3"
            android:gravity="center"/>
    </LinearLayout>
             <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <TextView
               android:text="1号机"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center"/>
           <TextView
               android:text="0"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center"/>
           <TextView
               android:id="@+id/kuangji1"
               android:text="80A币"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center"/>
           <TextView
               android:text="0"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center"/>
           <TextView
               android:text="正常"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center"/>
       </LinearLayout>
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                     android:background="#DEDEDE"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
           android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="2号机"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:text="1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/kuangj2_number"
                android:gravity="center"/>
            <TextView
                android:id="@+id/kuangji2"
                android:text="100A币"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:text="0.18"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:text="正常"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </LinearLayout>
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                     android:background="#DEDEDE"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="3号机"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:text="0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:id="@+id/kuangji3"
                android:text="220A币"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:text="0.18"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:text="正常"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </LinearLayout>
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                     android:background="#DEDEDE"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="4号机"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:text="0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:id="@+id/kuangji4"
                android:text=""
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:text="0.18"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <TextView
                android:text="正常"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </LinearLayout>
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                     android:background="#DEDEDE"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"></LinearLayout>
    </LinearLayout>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/kuanj_sign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
            android:id="@+id/kuangj_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/view_border4"
            android:text="@string/kuangj_register"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</LinearLayout>
